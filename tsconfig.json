{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
  ],
  "include": [
    "src/**/*.stories.tsx",
    "src/**/*.tsx",
    "src/**/*.ts",
  ]
}